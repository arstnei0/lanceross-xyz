---
import { Icon } from "astro-icon";

export interface Props {
    text: string;
    logo: string;
    href: string;
}

const { text, logo, href } = Astro.props as Props;
---

<div class="flex items-center p-4">
    <span
        class="flex justify-center items-center w-9 h-9 rounded-full mr-3"
    >
        <Icon name={logo} />
    </span>
    <p>{text}</p>
</div>
