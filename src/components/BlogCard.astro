---
export interface Props {
  title: string;
  description: string;
  pubDate: string;
  url: string | undefined;
}
let { title, description, pubDate, url } = Astro.props;
const fullDate = new Date(pubDate).toLocaleDateString("en", {
  dateStyle: "full",
});
url = url + "/";
---

<div class="grid grid-cols-1 gap-2 sm:grid-cols-4 leading-relaxed rounded-2xl border-zinc-700 text-zinc-400 transition-all">
  <time datetime={pubDate} class="hidden sm:block text-sm tracking-wide text-zinc-400 mt-6">{fullDate}</time>
  <a class="col-span-3 flex flex-col gap-2 sm:gap-4 p-5 hover:dark:bg-[#161923] rounded-lg transition-colors" href={url}>
    <time datetime={pubDate} class="block sm:hidden text-sm tracking-wide text-zinc-400">{fullDate}</time>
    <h2
      class="text-xl font-semibold group-hover:text-transparent group-hover:bg-clip-text group-hover:animate-move-bg group-hover:bg-gradient-to-r group-hover:bg-[length:400%] group-hover:from-indigo-500 group-hover:via-pink-500 group-hover:to-indigo-500 text-zinc-300 group-focus:text-transparent group-focus:bg-clip-text group-focus:animate-move-bg group-focus:bg-gradient-to-r group-focus:bg-[length:400%] group-focus:from-indigo-500 group-focus:via-pink-500 group-focus:to-indigo-500"
    >
      {title}
    </h2>
    <p class="!text-base">{description}</p>
  </a>
</div>
