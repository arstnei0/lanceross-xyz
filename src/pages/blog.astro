---
import Layout from "@layouts/Layout.astro";
import BlogCard from "@components/BlogCard.astro";
import Blogs from "@content/blogs.json";
---

<Layout title="Blog - Lance Ross" description="This is where you can find my blogs from Dev Community (dev.to)">
  <section>
    <h1 class="text-4xl mb-4">Welcome to my blog ğŸ“</h1>
    <p class="dark:text-zinc-300">
      This is where I write about my experiences as a developer, and share my thoughts in web development field. I also write about my personal life and my journey as a developer.
    </p><br />
  </section>
  <section>
    {
      Blogs.map((blog) => (
        <BlogCard
          title={blog.title}
          description={blog.description}
          pubDate={blog.pubDate}
          url={blog.url}
        />
      ))
    }
  </section>
</Layout>
